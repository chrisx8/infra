[Unit]
Description=OAuth2 Proxy (Internal)
ConditionFileIsExecutable=/opt/oauth2-proxy/oauth2-proxy
After=network-online.target

[Service]
StartLimitInterval=5
StartLimitBurst=10
ExecStart=/opt/oauth2-proxy/oauth2-proxy --config=internal.cfg
WorkingDirectory=/opt/oauth2-proxy
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
