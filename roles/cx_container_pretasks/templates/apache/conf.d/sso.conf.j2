<VirtualHost *:443>
    ServerName sso.chrisx.xyz

    SSLEngine on
    SSLCertificateFile /etc/apache2/ssl/{{ _apache_cert_name }}/fullchain.pem
    SSLCertificateKeyFile /etc/apache2/ssl/{{ _apache_cert_name }}/privkey.pem

    Header unset Strict-Transport-Security
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    ProxyPass / http://127.0.0.1:8080/ nocanon
    ProxyPassReverse / http://127.0.0.1:8080/ nocanon
    ProxyPreserveHost On
    RequestHeader set X-Forwarded-Proto expr=%{REQUEST_SCHEME}

    ErrorLog /var/log/apache2/sso_error.log
    CustomLog /var/log/apache2/sso_access.log combined
</VirtualHost>
