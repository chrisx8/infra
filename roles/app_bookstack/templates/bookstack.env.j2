# BookStack configuration
# https://github.com/BookStackApp/BookStack/blob/master/.env.example
# https://github.com/BookStackApp/BookStack/blob/master/.env.example.complete

# Application key
# Run `php artisan key:generate` to generate a valid key.
APP_KEY=ReplaceMe

# Application URL
# This must be the root URL that you want to host BookStack on.
APP_URL=https://tinynet.chrisx.xyz/wiki

# Application timezone
# Used where dates are displayed such as on exported content.
# Valid timezone values can be found here: https://www.php.net/manual/en/timezones.php
APP_TIMEZONE=America/New_York

# Database details
# Host can contain a port (localhost:3306) or a separate DB_PORT option can be used.
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=bookstack
DB_USERNAME=bookstack
DB_PASSWORD={{ mysql_bookstack_password.stdout }}

# Mail system to use
# Can be 'smtp' or 'sendmail'
MAIL_DRIVER=smtp

# Mail sending options
MAIL_FROM=noreply@chrisx.xyz
MAIL_FROM_NAME="BookStack @ TinyNET"

# SMTP mail options
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Session configuration
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# Authentication method to use
# Can be 'standard', 'ldap' or 'saml2'
AUTH_METHOD=saml2
SAML2_NAME='TinyNET SSO'
SAML2_EMAIL_ATTRIBUTE=email
SAML2_EXTERNAL_ID_ATTRIBUTE=uid
SAML2_DISPLAY_NAME_ATTRIBUTES=displayName
SAML2_IDP_ENTITYID=https://tinynet-iam.chrisx.xyz/realms/master/protocol/saml/descriptor
SAML2_AUTOLOAD_METADATA=true
SAML2_USER_TO_GROUPS=true
SAML2_GROUP_ATTRIBUTE=member
SAML2_REMOVE_FROM_GROUPS=true

# Disable default third-party services such as Gravatar and Draw.IO
DISABLE_EXTERNAL_SERVICES=true
